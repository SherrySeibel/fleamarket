<h2>FleaMarket Dashboard</h2>

<div>
  <%= form_tag search_path, method: :get do %>
    <%= text_field_tag :query %>
    <%= submit_tag "Search" %>
  <% end %>
</div>

<% if current_user.admin? %>
  <%= link_to "Categories", :categories %>
<% end %>

<h3><%= link_to "Categories", :categories %></h3>
<h3><%= link_to "View My Product Listings", current_user %></h3>
<h3><%= link_to "Add Product", [:new, :product] %></h3>
